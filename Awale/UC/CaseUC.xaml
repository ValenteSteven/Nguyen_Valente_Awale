<UserControl x:Class="Awale.UC.CaseUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Awale.UC"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="40">
    <Grid>
        <Button Background="WhiteSmoke">
            <Grid>
                <Image Source="/Images/awale.png"/>
                <TextBlock TextAlignment="Center" Margin="0,20,-0.2,-20.2" FontSize="20" FontFamily="Constantia" Text="{Binding NbGraines, Mode=TwoWay}"> 
                </TextBlock>
            </Grid>
        </Button>
    </Grid>
</UserControl>
